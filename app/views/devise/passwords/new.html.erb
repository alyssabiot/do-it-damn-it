<div class="flex h-screen bg-gray-700">
  <div class="w-full max-w-sm m-auto bg-gray-100 rounded p-5">
    <header>
      <img class="w-20 mx-auto mb-5" src="https://img.icons8.com/external-glyph-on-circles-amoghdesign/48/000000/external-check-education-vol-01-glyph-on-circles-amoghdesign-2.png" />
    </header>

    <h2 class="text-center p-4">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: "w-full max-w-sm"}) do |f| %>
      <div>
        <%= f.label :email, class: "input-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
      </div>

      <div>
        <%= f.submit "Send me reset password instructions", class: "submit" %>
      </div>
    <% end %>

    <footer>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "link-small float-left" %>
    </footer>
  </div>
</div>
