<div class="flex h-screen bg-gray-700">
  <div class="w-full max-w-sm m-auto bg-gray-100 rounded p-5">
    <h2 class="text-center p-4">Edit your account</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "w-full max-w-sm" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email, class: "block mb-2 text-gray-500" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 mb-6 text-gray-700 border-b-2 border-gray-500 outline-none focus:bg-gray-100" %>
      </div>

      <div>
        <%= f.label :password, class: "block mb-2 text-gray-500" %>
        <span class="block mb-2 text-gray-500">(leave blank if you don't want to change it)</span>
        <% if @minimum_password_length %>
        <span class="block mb-2 text-gray-500"><em>(<%= @minimum_password_length %> characters minimum)</em></span>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full p-2 mb-6 text-gray-700 border-b-2 border-gray-500 outline-none focus:bg-gray-100" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "block mb-2 text-gray-500" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full p-2 mb-6 text-gray-700 border-b-2 border-gray-500 outline-none focus:bg-gray-100" %>
      </div>

      <div class="field">
        <%= f.label :current_password, class: "block mb-2 text-gray-500" %>
        <span class="block mb-2 text-gray-500">(we need your current password to confirm your changes)</span>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full p-2 mb-6 text-gray-700 border-b-2 border-gray-500 outline-none focus:bg-gray-100" %>
      </div>

      <div>
        <%= f.submit "Update", class: "w-full bg-gray-700 hover:bg-gray-600 text-white font-bold py-2 px-4 mb-6 rounded" %>
      </div>
    <% end %>

    <footer>
      <%= link_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "text-gray-700 hover:text-indigo-700 text-sm float-left" %>
      <%= link_to "Back", root_path, class: "text-gray-700 hover:text-indigo-700 text-sm float-right" %>
    </footer>
  </div>
</div>
